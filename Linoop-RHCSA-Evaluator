#!/bin/bash


source Linoop-eval-script 

while true; do

	read -p "Please select question (all or 1-8 or q to quit): " question
	echo ""
	case $question in
		1)
			check_pw
			;;
		2)
			check_IP
			;;
		3)
			check_repos
			;;
		4)
			check_chrony
			;;
		5)
			validate_autofs
			;;
		6)
			check_grp
			check_users
			check_grp_membership
			check_usr_shell
			chk_sudo
			check_umask
			;;
		7)
		        chk_enforce_pw
                        chk_acc_exp
                        ;;
		8)
			chk_max_days
			;;

		q)
			break
			;;

	    *)
		    echo "You Did not Select valid Question number"
	esac
done
